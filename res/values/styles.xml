<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="appThemeFullScreen" parent="AppBaseThemeFullScreen">
        
    </style>
    
    <style name="AppBaseThemeFullScreen" parent="Theme.AppCompat.Light">
       <item name="android:windowNoTitle">true</item> <!-- Hides the Action Bar -->
       <item name="android:windowFullscreen">false</item> <!-- Hides the status bar -->
    </style>
    
    <style name="appThemeFullScreenWithStatusBar" parent="AppBaseThemeFullScreenStatusBar">
        
    </style>
    
    <style name="AppBaseThemeFullScreenStatusBar" parent="Theme.AppCompat.Light">
       <item name="android:windowNoTitle">true</item> <!-- Hides the Action Bar -->
       <item name="android:windowFullscreen">false</item> <!-- Hides the status bar -->
    </style>

</resources>
